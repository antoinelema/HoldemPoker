<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/tablepoker"
    tools:context="com.example.dbn.myapplication.AddActivity">

    <TextView android:text="@string/title_activity_add" android:layout_width="wrap_content"
        android:id="@+id/titreAddJoueur"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="OK"
        android:id="@+id/button_addOk"
        android:textSize="44dp"
        android:onClick="clique_addOk"
        android:layout_below="@+id/editTextAddPseudo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddPseudo"
        android:background="@color/white"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:maxLength="10"
        android:maxLines="1"
        android:inputType="text"
        android:layout_alignLeft="@+id/button_addOk"
        android:layout_alignStart="@+id/button_addOk"
        android:layout_below="@+id/lblPseudo"
        android:layout_alignRight="@+id/button_addOk"
        android:layout_alignEnd="@+id/button_addOk" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblPseudo"
        android:id="@+id/lblPseudo"

        android:textSize="35dp"
        android:textColor="@color/red"
        android:layout_below="@+id/titreAddJoueur"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
