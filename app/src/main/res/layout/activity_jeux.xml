<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dbn.myapplication.JeuxActivity"
    android:background="@drawable/tapis">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout">

            <ImageView
                android:id="@+id/cardImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dos"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="0"
                android:layout_column="0"
                android:clickable="false"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:id="@+id/cardImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dos"
                android:layout_alignTop="@+id/cardImage1"
                android:layout_toRightOf="@+id/cardImage1"
                android:layout_toEndOf="@+id/cardImage1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:clickable="false" />

            <ImageView
                android:id="@+id/cardImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dos"
                android:layout_alignTop="@+id/cardImage4"
                android:layout_toLeftOf="@+id/cardImage4"
                android:layout_toStartOf="@+id/cardImage4"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginLeft="10dp"
                android:clickable="false" />

            <ImageView
                android:id="@+id/cardImage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dos"
                android:layout_alignTop="@+id/cardImage1"
                android:layout_toLeftOf="@+id/cardImage5"
                android:layout_toStartOf="@+id/cardImage5"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_marginLeft="10dp"
                android:clickable="false" />

            <ImageView
                android:id="@+id/cardImage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dos"
                android:layout_alignTop="@+id/cardImage4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_marginLeft="10dp"
                android:clickable="false" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_marginTop="379dp"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txtNomJoueur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/cardMain2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dos"
            android:layout_alignTop="@+id/cardImage1"
            android:layout_toRightOf="@+id/cardImage1"
            android:layout_toEndOf="@+id/cardImage1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/cardMain1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dos"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="false"
            android:layout_marginLeft="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="187dp"
                android:layout_height="90dp"
                android:text="Fold"
                android:id="@+id/buttonFold"
                android:layout_gravity="right|bottom"
                android:onClick="clique_fold"/>

            <Button
                android:layout_width="187dp"
                android:layout_height="90dp"
                android:text="Bet"
                android:id="@+id/buttonBet"
                android:layout_gravity="center_horizontal|bottom"
                android:onClick="clique_bet"/>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
